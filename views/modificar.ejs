
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
  </head>
  <body>
     <% if (producto) {%>
      <div class="container mt-4">
        <div class="card border-secondary">
            <div class="bg-warning text-red"><h1>MODIFICAR PEDIDO</h1></div>
            <div class="card-body">
                <form action="/modificar" method="POST">
                    <input id="id" name="id" value="<%= producto.id %>" hidden>
                
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"id="producto" name="producto" value="<%= producto.producto %>">
                        <option selected>Seleccione Repuesto</option>
                        <option value="Freno">Pastillas de Freno</option>
                        <option value="Balatas">Balatas</option>
                        <option value="Radiador">Radiador</option>
                        <option value="Kit de Embrague">Kit de Embrague</option>
                        <option value="Foco Derecho">Foco Derecho</option>
                        <option value="Foco Izquierdo">Foco Izquierdo</option>
                        <option value="Bomba de Agua">Bomba de Agua</option>
                        <option value="Tapa de Valvulas">Tapa de Valvulas</option>
                        <option value="Culata">Culata</option>
                        <option value="Cable de Bujias">Cable de Bujias</option>
                        <option value="Correa de Distribucion">Correa de Distribucion</option>
                        <option value="Soporte de Motor">Soporte de Motor</option>
                        <option value="Kit de Empaquetudas">Kit de Empaquetudas</option>
                        <option value="Amortiguadores">Amortiguadores</option>
                      </select>

                      <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"id="cantidad" name="cantidad" value="<%= producto.cantidad %>">
                        <option selected>Selecccione Cantidad</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                      </select>

                      <div class="mb-3">
                        <label for="precio" class="form-label">Precio</label>
                        <input type="text" class="form-control" id="precio" name="precio" value="<%= producto.precio %>" placeholder="$10.000" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="fecha_pedido" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="fecha_pedido" name="fecha_pedido" value="<%= producto.fecha_pedido %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">telefono(nuevo)</label>
                        <input type="number" class="form-control" id="telefono" name="telefono" value="<%= producto.telefono %>" tabindex="1">   
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/pedido" class="btn btn-danger">cancelar</a>
                </form>
            </div>

        </div>
      </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>
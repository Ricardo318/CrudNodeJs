<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRUD</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    
    <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
  </head>
  <body>
      <div class="container">
        <p class="h1" style="color:blue;"><strong>Listado de Clientes</strong></p>
        <a href="/create" class="btn btn-primary"><strong>Nuevo</strong></a>
        <table class="table table-bordered table-striped text-center mt-4">
          <thead>
            <tr class="bg-warning text-white">
              <th scope="col">ID</th>
              <th scope="col">NOMBRE</th> 
              <th scope="col">CORREO</th>
              <th scope="col">OPERACION</th>
            </tr>
          </thead>
          <tbody>
                <% results.forEach((user)=>{ %>
                <tr>
                 <td><%= user.id %></td>
                 <td><%= user.user %></td>
                 <td><%= user.email %></td>
                 <td>
                  <a href="/edit/<%= user.id %>" style="font-size:30px; color:blue;"><i class="bi bi-pencil-square"></i></a>
                  <a href="/delete/<%= user.id %>" style="font-size:30px; color:red;"><i class="bi bi-trash-fill"></i></a>
                 </td>
                </tr>
                 <%}) %>
          </tbody>
        </table>
        <a href="/" style="font-size:50px;"><i class="bi bi-box-arrow-in-left"></i></a>

      </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>